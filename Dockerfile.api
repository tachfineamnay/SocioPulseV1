FROM node:20-slim AS base

# System deps needed for Prisma/Nest builds and runtime
RUN apt-get update -y && apt-get install -y openssl ca-certificates && rm -rf /var/lib/apt/lists/*

# 1. Install dependencies only when needed
FROM base AS deps
WORKDIR /app

# Copy root package files
COPY package.json package-lock.json ./

# Copy packages (shared-types)
COPY packages ./packages

# Copy API package.json
COPY apps/api/package.json ./apps/api/package.json

# Install dependencies (including workspace linkage)
RUN npm ci

# 2. Rebuild the source code only when needed
FROM base AS builder
WORKDIR /app
COPY --from=deps /app/node_modules ./node_modules
COPY . .

# Generate Prisma Client (needed for types)
RUN npx prisma generate

# Build shared-types package using npx to ensure tsc is found
RUN cd packages/shared-types && npx tsc

# Build API
RUN npm run api:build

# 3. Production image, copy all the files and run next
FROM base AS runner
WORKDIR /app

ENV NODE_ENV production
ENV PORT 4000

RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 nestjs

# Copy dependencies
COPY --from=builder /app/node_modules ./node_modules
COPY --from=builder /app/package.json ./
# Copy shared packages explicitly to ensure availability at runtime
COPY --from=builder /app/packages ./packages

# Copy built application
COPY --from=builder /app/apps/api/dist ./dist
COPY --from=builder /app/apps/api/package.json ./apps/api/package.json

# Copy Prisma schema (if needed for runtime operations, usually generic is enough for client)
COPY --from=builder /app/prisma ./prisma

USER nestjs

EXPOSE 4000

CMD ["node", "dist/main"]
